

<tr>
   <% if !@is_clinic %>
    <td>
      <h2> Professional <%= (@current_user.name )%></h2>
      <h3>Clinics</h3>
    </td>
   <% else %>    
   <%end%>
 </tr>
 <br>


<%=  link_to("<< " + "Home", @current_user)  %>



<div class="table-responsive">
 <table class="table table-striped">
  <thead>
    <tr>
      <th>Clinic Id</th>
      <th>Clinic Name</th>
      <th>Created by</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clinics.each do |clinic| %>
      <tr>
        <td><%= clinic.id %></td>
        <td><%= clinic.name %></td>
        <td><%= clinic.creator %></td>

        <td><%= link_to(t(:show), [@current_user, clinic], :class => 'action show') %></td>

       <td><%= link_to(t(:edit), [:edit, @current_user, clinic], :class => 'action edit') %></td>

       <td> <%= link_to('Delete', [:delete, @current_user, clinic], :class => 'action delete') %></td>
     
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

  <!-- A clinic won't be able to create another clinic apart from itself -->
<% if !@is_clinic %>
  <%= link_to('New Clinic', [:new, @current_user, params[:controller].singularize], :class => 'action new') %>
<% else %>
<% end %> |

