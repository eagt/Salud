<h1>Listing Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Clinic</th>
      <th>Comment</th>
      <th>Date</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.clinic.name %></td>
        <td><%= appointment.comment %></td>
        <td><%= appointment.date %></td>
        <td><%= appointment.creator %></td>

        <td><%= link_to 'Show', appointment_path(appointment, {:clinic_id => @clinic.id}) %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', [@clinic, appointment], method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

